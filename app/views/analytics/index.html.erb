<h1>Analytics</h1>
<ul>
  <li>Total Pageviews: <%= @pageviews %></li>
  <li>Total Unique Pageviews: <%= @unique_visits_count %></li>
</ul>

<div id="chart"></div>

<%= link_to "Download data", album_visits_path(@album, format: "csv") %>

<% if !Rails.env.test? %>
  <%= content_for :extra_footer do %>
    <script src="http://code.highcharts.com/maps/highmaps.js"></script>
    <script src="http://code.highcharts.com/maps/modules/exporting.js"></script>
    <script src="http://code.highcharts.com/mapdata/custom/usa-and-canada.js"></script>

    <script type="text/javascript">
      var data = <%= raw @map_data.to_json %>;
    </script>

    <div id="container"></div>

  <% end %>
<% end %>
