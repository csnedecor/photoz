<h1>Profile for <%= @user.username %></h1>
  <% if @user == current_user %>
    <h3><%= @user.email %></h3>
  <% end %>
<h3></h3>

  <div class="row home">

    <% @albums.each do |album| %>
      <div class="large-4 small-6 columns home">
        <% if @user == current_user %>
          <%= link_to "Edit album", edit_album_path(album) %>
          <%= link_to "Delete Album", album_path(album), method: :delete %>
        <% end %>
        <%= link_to(image_tag(album.photos[0].photo.url, class: "index"),
            album_path(album)) %>
        <div class="panel home">
          <h5>
            <%= link_to(album.name, album_path(album), class: "photo-title") %>
          </h5>
          <h6 class="subheader">
            by <%= link_to(album.user.username, user_path(album.user),
                   class: "username") %>
          </h6>
        </div>
      </div>
    <% end %>

  </div>
