<h1>Create a new album</h1>

<ul>
  <% if @album.errors.any? %>
    <% @album.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= form_for @album, url: albums_path do |f| %>
  <div>
    <%= f.label :name, "Album Name" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit "Create Album" %>
  </div>
<% end %>
