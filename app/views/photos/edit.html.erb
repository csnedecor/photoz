<div class="black-background">

  <div class="row">
    <h2 class="text-center white">Edit Your Photo</h1>
    <%= image_tag(@photo.photo.url, class: "center", id: "edit-photo") %>
  </div>

  <%= form_for(@photo) do |f| %>
    <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
      <%= f.hidden_field attribute, id: attribute %>
    <% end %>
    <div class="center">
      <%= f.submit "Crop" %>
    </div>
  <% end %>
</div>

<div class="text-center panel photo">
  <h1><%= link_to @photo.album.name, album_path(@photo.album) %></h1>
  <p>
    <%= @photo.album.description %>
  </p>
  <div id = "user">
    <%= @photo.album.user.username %>
  </div>
</div>
