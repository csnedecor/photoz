<div class="black-background">
  <div class="row">
    <h1>Edit Your Photo</h1>
    <%= image_tag(@photo.photo.url(:original), class: "only-photo", id: "edit-photo") %>
  </div>
  <%= form_for([@album, @photo]) do |f| %>
    <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
      <%= f.text_field attribute, id: attribute %>
    <% end %>
    <p><%= f.submit "Crop" %></p>
  <% end %>
</div>

<div class="text-center panel photo">
  <h1><%= link_to @album.name, album_path(@album) %></h1>
  <p>
    <%= @album.description %>
  </p>
  <div id = "user">
    <%= @album.user.username %>
  </div>
</div>

