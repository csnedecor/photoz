<div class="black-background">
  <div class="row">
    <%= image_tag(@photo.photo.url(:large), class: "only-photo") %>
  </div>
</div>

<div class="text-center panel photo">
  <h1><%= link_to @photo.album.name, album_path(@photo.album) %></h1>
  <p>
    <%= @photo.album.description %>
  </p>
  <div id = "user">
    <%= @photo.album.user.username %>
  </div>
  <% if current_user == @photo.album.user %>
    <%= link_to "Edit Photo", edit_photo_path(@photo) %>
  <% end %>
</div>
